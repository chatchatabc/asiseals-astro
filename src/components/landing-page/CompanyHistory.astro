---
import companyHistoryJson from "@data/company-history.json";
import { Icon } from "astro-icon";
import { Img } from "astro-imagetools/components";
---

<company-history>
  <!-- Header -->
  <header>
    <h2 class="text-5xl text-center">Company History</h2>
  </header>

  <section class="max-w-7xl mx-auto mt-8 px-4 lg:px-8">
    <!-- Carousel Container -->
    <section class="relative pb-20">
      <!-- Content Carousel -->
      <ul class="bg-white shadow-lg flex snap-x overflow-hidden">
        {
          companyHistoryJson.contents.map((history) => {
            return (
              <li class="slides duration-1000 snap-start w-full flex flex-col flex-shrink-0 px-8 md:pl-16">
                <figure class="flex flex-wrap h-full flex-row-reverse">
                  <div class="w-full pt-8 md:p-8 md:w-1/2">
                    <Img
                      breakpoints={[320, 480]}
                      src={history.image}
                      alt={history.name}
                    />
                  </div>
                  <figcaption class="py-8 md:w-1/2 lg:pt-16">
                    <header class="flex items-center">
                      <div class="h-[0.1rem] hidden translate-x-1 w-8 bg-primary md:block" />
                      <h3 class="px-4 text-2xl text-primary md:pl-8">
                        {history.name}
                      </h3>
                    </header>
                    <p class="px-4 md:pl-16 lg:text-xl">{history.summary}</p>
                  </figcaption>
                </figure>
              </li>
            );
          })
        }
      </ul>

      <!-- Indicator Carousel -->
      <section class="absolute h-full w-full top-0 left-0">
        <div
          class="w-full absolute h-[0.2rem] left-0 bottom-10 -translate-y-1/2 bg-primary"
        >
        </div>
        <!-- Indicators -->
        <ul
          class="flex-1 flex items-end snap-x absolute duration-1000 overflow-hidden h-full w-full top-0 left-0"
        >
          {
            companyHistoryJson.contents.map((history) => {
              return (
                <li class="indicators duration-1000 w-[200px] snap-start flex-shrink-0 pl-12">
                  <button
                    aria-label={`Jump to ${history.name}`}
                    class="circles h-10 w-10 rounded-full bg-white border-2 border-primary relative"
                  >
                    <div class="absolute w-1/3 h-1/3 left-1/2 -translate-x-1/2 top-1/2 -translate-y-1/2 bg-primary rounded-full">
                      <div class="vertical-lines hidden absolute left-1/2 w-[0.2rem] top-0 -translate-y-full z-[10] bg-primary -translate-x-1/2 md:h-[600px]" />
                    </div>
                  </button>
                  <p>{history.name}</p>
                </li>
              );
            })
          }
        </ul>

        <!-- Prev Button -->
        <button
          id="history-prev-btn"
          aria-label="Previous Button"
          class="h-8 w-8 rounded-full bottom-7 transition left-0 absolute bg-white hover:text-onPrimary hover:bg-primary"
        >
          <Icon class="h-full w-full" name="mdi:chevron-left" />
        </button>
        <!-- Next Button -->
        <button
          id="history-next-btn"
          aria-label="Next Button"
          class="h-8 w-8 rounded-full bottom-7 right-0 bg-white absolute transition hover:text-onPrimary hover:bg-primary"
        >
          <Icon class="h-full w-full" name="mdi:chevron-right" />
        </button>
      </section>
    </section>
    <a
      href="/about/company-history"
      class="mx-auto w-fit block bg-primary text-onPrimary text-xl mt-8 px-8 py-4 transition hover:bg-background"
    >
      View More
    </a>
  </section>
</company-history>

<script>
  import companyHistoryJson from "@data/company-history.json";

  class CompanyHistory extends HTMLElement {
    constructor() {
      super();

      let index = 0;
      let listLength = companyHistoryJson.contents.length;

      const slides = this.querySelectorAll<HTMLElement>(".slides");
      const indicators = this.querySelectorAll<HTMLElement>(".indicators");
      const prevBtn = this.querySelector("#history-prev-btn");
      const nextBtn = this.querySelector("#history-next-btn");
      const verticalLines = this.querySelectorAll(".vertical-lines");
      const circles = this.querySelectorAll(".circles");

      prevBtn?.addEventListener("click", () => {
        if (index > 0) {
          index--;
          handleSlide();
          nextIndicator();
          handleVerticalLines();
        }
      });

      nextBtn?.addEventListener("click", () => {
        if (index < listLength - 1) {
          index++;
          handleSlide();
          nextIndicator();
          handleVerticalLines();
        }
      });

      circles.forEach((circle, i) => {
        circle.addEventListener("click", () => {
          index = i;
          handleSlide();
          nextIndicator();
          handleVerticalLines();
        });
      });

      function nextIndicator() {
        indicators.forEach((indicator) => {
          indicator.style.transform = `translateX(-${index * 200}px)`;
        });
      }

      function handleSlide() {
        slides.forEach((slide) => {
          slide.style.transform = `translateX(-${index * 100}%)`;
        });
      }

      function handleVerticalLines() {
        verticalLines.forEach((line) => {
          line.classList.add("hidden");
        });

        circles.forEach((circle) => {
          circle.classList.remove("bg-white");
          circle.classList.remove("border-2");
        });

        circles[index].classList.add("bg-white");
        circles[index].classList.add("border-2");
        verticalLines[index].classList.remove("hidden");
      }

      handleVerticalLines();
    }
  }

  customElements.define("company-history", CompanyHistory);
</script>
