---
import LayoutCategory from "@layouts/LayoutCategory.astro";
import CertificateSection from "@components/about-us/CertificateSection.astro";
import aboutUsJson from "@data/about-us.json";
---

<LayoutCategory
  title="About Us"
  image="/images/about-us/banner.webp"
  pageTitle={aboutUsJson.pageTitle}
  pageDescription={aboutUsJson.pageDescription}
  pageKeywords={aboutUsJson.pageKeywords}
  ogTitle={aboutUsJson.ogTitle ?? aboutUsJson.pageTitle}
  ogDescription={aboutUsJson.ogDescription ?? aboutUsJson.pageDescription}
  ogImage={aboutUsJson.ogImage}
  ogType={aboutUsJson.ogType}
  twitterCardType={aboutUsJson.twitterCardType}
  twitterTitle={aboutUsJson.twitterTitle}
  twitterDescription={aboutUsJson.twitterDescription}
  twitterImage={aboutUsJson.twitterImage}
>
  <!-- Introduction -->
  <section class="max-w-7xl mx-auto mt-16 px-4 lg:px-8">
    <figure class="flex flex-wrap items-center">
      <div class="mx-auto w-full md:w-2/3 lg:w-1/2">
        <div class="relative pb-[56.16%]">
          <iframe
            title="Advantage Seal Video"
            class="absolute w-full h-full left-0 right-0"
            src="https://www.facebook.com/plugins/video.php?height=314&href=https%3A%2F%2Fwww.facebook.com%2Fadvantagesealph%2Fvideos%2F3282931381960999%2F&show_text=false&width=560&t=0"
            style="border:none;overflow:hidden"
            allowfullscreen="true"
            allow="autoplay; clipboard-write; encrypted-media; picture-in-picture"
          ></iframe>
        </div>
      </div>
      <figcaption class="w-full md:px-8 lg:w-1/2">
        <header>
          <h2 class="text-5xl">{aboutUsJson.name}</h2>
        </header>
        <p class="mt-4 text-lg">
          {aboutUsJson.summary}
        </p>
      </figcaption>
    </figure>
  </section>

  <!-- features -->
  <section class="max-w-7xl mx-auto my-16 lg:px-4">
    <ul class="flex flex-wrap">
      {
        aboutUsJson.features.map((feature) => {
          return (
            <li class="p-4 w-full lg:w-1/3 ">
              <figure>
                <figcaption>
                  <header>
                    <img
                      class="w-16 h-16"
                      src={feature.icon}
                      alt={feature.name}
                    />
                    <h3 class="text-3xl font-bold">{feature.name}</h3>
                  </header>
                  <p class="mt-4 text-xl">{feature.summary}</p>
                </figcaption>
              </figure>
            </li>
          );
        })
      }
    </ul>
  </section>

  <!-- Certificates Section -->
  <section
    class="bg-[url('/images/about-us/certificate-bg.webp')] bg-cover bg-no-repeat bg-fixed py-12"
  >
    <!-- Carousel Container -->
    <section class="max-w-7xl text-white mx-auto px-4 lg:px-8">
      <header>
        <h2 class="text-4xl text-center">Our Certificate</h2>
      </header>

      <!-- Carousel Container -->
      <CertificateSection />
    </section>
  </section>
</LayoutCategory>

<!-- SwiperJS -->
<script>
  import { register } from "swiper/element/bundle";
  register();
</script>
