---
import industriesJson from "@data/industries.json";
import companyHistoryJson from "@data/company-history.json";
import HeroSection from "@components/landing-page/HeroSection.astro";
import Layout from "@layouts/Layout.astro";
import { Icon } from "astro-icon";
import { Img } from "astro-imagetools/components";
---

<Layout>
  <!-- Hero Section -->
  <HeroSection />

  <!-- Advantage Seal -->
  <section class="max-w-7xl mx-auto px-4 lg:px-8">
    <!-- Section Header -->
    <header class="pb-24 md:pb-40 lg:pb-56">
      <h1 class="text-center text-[#E14753] text-3xl md:text-4xl lg:text-5xl">
        <span class="relative inline-block translate-x-[5%]">
          <span class="bg-[#DCECF9] absolute w-full h-4 left-0 -bottom-1 z-[-1]"
          ></span>
          <span class="px-4">Advantage Seal</span>
        </span>
        <span
          class="relative inline-block -translate-x-[5%] translate-y-1/2 md:translate-y-[150%]"
        >
          <span class="bg-[#DCECF9] absolute w-full h-4 left-0 -bottom-1 z-[-1]"
          ></span>
          <span class="px-4">The Seal of Quality</span>
        </span>
      </h1>
    </header>

    <!-- Content Section -->
    <section class="text-xl">
      <figure class="flex flex-wrap flex-row-reverse items-center">
        <iframe
          class="h-96 w-full md:px-4 md:w-7/12"
          src="https://www.youtube-nocookie.com/embed/fJ1BHikwkQ0"
          title="YouTube video player"
          frameborder="0"
          allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
          allowfullscreen></iframe>
        <figcaption class="w-full mt-8 md:w-5/12">
          <p>
            Advantage Seal can develop and manufacture custom mechanical seals
            depending on our customers' specific needs. Quality, service, and
            delivery are all areas in which we aim to exceed our clients'
            expectations consistently.
          </p>
          <button class="px-6 py-2 mt-12 text-white bg-[#E14753]">
            View our seal line &gt;
          </button>
        </figcaption>
      </figure>
    </section>
  </section>

  <!-- Industry Section -->
  <section class="mt-24 text-white bg-[#4176A4] py-16">
    <!-- Container -->
    <section class="">
      <!-- Header -->
      <header
        class="flex justify-between items-center max-w-7xl mx-auto px-4 lg:px-8"
      >
        <h1 class="text-5xl">Industry</h1>
        <div class="flex items-center divide-x">
          <button class="px-2">
            <Icon
              name="mdi:chevron-left"
              class="h-8 w-8 transition hover:text-[#E14753]"
            />
          </button>
          <button class="px-2">
            <Icon
              name="mdi:chevron-right"
              class="h-8 w-8 transition hover:text-[#E14753]"
            />
          </button>
        </div>
      </header>

      <!-- Carousel -->
      <section class="max-w-7xl mx-auto px-4 flex overflow-x-hidden pb-24 mt-6">
        {
          industriesJson.contents.map((item) => {
            return (
              <div class="flex-shrink-0 p-4 w-full md:w-1/3 lg:w-1/4">
                <figure class="relative group">
                  <div class="bg-white py-16 w-full h-56 px-8">
                    <a
                      href={`/industries/${item.slug}`}
                      class="duration-500 relative h-full block z-[1] group-hover:opacity-0"
                    >
                      <img
                        src={item.image}
                        alt={item.name}
                        class="w-full h-full object-contain"
                      />
                    </a>
                  </div>
                  <figcaption class="duration-500 absolute w-full h-fit left-0 bottom-0 translate-y-full group-hover:bottom-1/2 group-hover:translate-y-1/2">
                    <p class="text-center duration-500 text-xl tracking-widest px-8 group-hover:tracking-[0.5rem]">
                      <span class="transition group-hover:text-[#E14753]">
                        {item.name}
                      </span>
                    </p>
                  </figcaption>
                </figure>
              </div>
            );
          })
        }
      </section>

      <!-- Action button -->
      <a
        href="/industries"
        class="block w-fit py-4 px-6 mx-auto text-xl bg-[#E14753]"
      >
        View More Industries &gt;
      </a>
    </section>
  </section>

  <!-- Company History -->
  <section class="bg-[#DCECF9] py-16">
    <!-- Header -->
    <header>
      <h1 class="text-5xl text-center">Company History</h1>
    </header>

    <!-- Content Container -->
    <section class="max-w-7xl mx-auto relative mt-8 px-4 lg:px-8">
      <!-- Carousel -->
      <ul class="bg-white shade-lg py-2 flex overflow-hidden">
        {
          companyHistoryJson.contents.map((history) => {
            return (
              <li class="px-8 w-full flex-shrink-0">
                <figure class="flex">
                  <figcaption class="w-1/2 pl-12 pt-16">
                    <header class="flex items-center">
                      <div class="h-1 w-8 bg-blue-500" />
                      <h2 class="text-3xl">{history.name}</h2>
                    </header>
                    <p class="pl-8 text-xl">{history.summary}</p>
                  </figcaption>
                  <div class="w-1/2 px-8">
                    <Img src={history.image} alt="" />
                  </div>
                </figure>
              </li>
            );
          })
        }
      </ul>

      <!-- Timeline -->
      <section class="flex items-center relative mt-8 overflow-hidden">
        <!-- line -->
        <div class="h-1 bg-blue-500 absolute w-full top-1/2 -translate-y-1/2">
        </div>

        <button class="h-6 w-6 rounded-full bg-white relative">
          <Icon class="h-full w-full" name="mdi:chevron-left" />
        </button>
        <ul class="flex-1 flex overflow-hidden">
          {
            companyHistoryJson.contents.map((history) => {
              return (
                <li class="flex-1 pl-8">
                  <div class="h-10 w-10 rounded-full bg-black relative">
                    <div class="vertical-line absolute h-96 w-1 left-1/2 -translate-x-1/2 bg-blue-500" />
                    <div class="absolute w-1/3 h-1/3 left-1/2 -translate-x-1/2 top-1/2 -translate-y-1/2 bg-white rounded-full" />
                  </div>
                  <p class="absolute bottom-0 translate-y-full">
                    {history.name}
                  </p>
                </li>
              );
            })
          }
        </ul>
        <button class="h-6 w-6 rounded-full bg-white relative">
          <Icon class="h-full w-full" name="mdi:chevron-right" />
        </button>
      </section>
    </section>
  </section>
</Layout>
