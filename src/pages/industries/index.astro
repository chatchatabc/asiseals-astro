---
import ProductSearch from "@components/widgets/ProductSearch.astro";
import LayoutCategory from "@layouts/LayoutCategory.astro";
import industriesJson from "@data/industries.json";

const industries = [...industriesJson.contents];
industries.sort((a, b) => {
  if (a.name < b.name) {
    return -1;
  }
  if (a.name > b.name) {
    return 1;
  }
  return 0;
});
---

<LayoutCategory
  pageTitle="Industries"
  image="/images/industries/banner.webp"
  title="Industries"
>
  <!-- Container -->
  <section class="container font-abel mx-auto px-4 lg:px-8">
    <!-- Summary -->
    <section>
      <p class="text-xl py-16">
        Advantage Seals has extensive experience in the food and beverage
        industries. We understand the industry's diverse sealing requirements
        and are committed to assisting our clients in remaining economically
        competitive while maintaining product integrity.
      </p>
    </section>

    <!-- Search -->
    <section class="pb-4 border-b-2 border-dashed">
      <ProductSearch />
    </section>

    <!-- Categories -->
    <section>
      <ul class="flex flex-wrap mb-24">
        {
          industries.map((industry) => {
            return (
              <li class="p-8 flex justify-center w-1/2 md:w-1/3">
                <figure class="relative">
                  <div class="flex items-center h-48 mx-auto">
                    <img
                      src={industry.image}
                      alt={industry.name}
                      class="w-full h-full object-scale-down"
                    />
                  </div>
                  <figcaption class="mt-8">
                    <p class="text-[#3B71A1] text-center font-bold text-xl">
                      {industry.name}
                    </p>
                    <a
                      class="absolute top-0 z-[1] left-0 w-full h-full"
                      href={industry.href}
                    />
                  </figcaption>
                </figure>
              </li>
            );
          })
        }
      </ul>
    </section>
  </section>
</LayoutCategory>
